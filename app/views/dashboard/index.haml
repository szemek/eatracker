= form_for(:meal, url: meals_path) do |f|
  = f.text_field :name, placeholder: 'posi≈Çek'
  = f.text_field :energy, placeholder: 'kalorie'
  = f.date_field :consumed_at, name: 'meal[consumed_at][date]', value: meal.consumed_at.strftime('%Y-%m-%d')
  = f.time_field :consumed_at, name: 'meal[consumed_at][time]', value: meal.consumed_at.strftime('%H:%M')
  = f.submit 'Dodaj'

%table
  - meals.each do |meal|
    %tr
      %td= meal.name
      %td= meal.energy
      %td= meal.consumed_at.strftime('%H:%M, %d %b %Y')
